{{#each this}}

 <a class="gallery__link" href="{{largeImageURL}}">
  
   <div class="photo-card">
     <img src="{{webformatURL}}" data-source={{largeImageURL}} class = "gallery__image" alt="{{tags}}" loading="lazy" />
      <div class="info">
        <p class="info-item info-item__likes">
          <b>{{likes}}</b>
        </p>
        <p class="info-item info-item__views">
          <b>{{views}}</b>
        </p>
        <p class="info-item info-item__comments">
          <b>{{comments}}</b>
        </p>
        <p class="info-item info-item__downloads">
          <b>{{downloads}}</b>
        </p>
      </div>
    </div>
    
</a>

{{/each}}